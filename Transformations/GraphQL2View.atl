-- @path GraphQL=metamodel/GraphQL.ecore
-- @path View=metamodel/View.ecore

module GraphQL2View;
create OUT : View from IN : GraphQL;

rule Type2Schema {
	from 
			s: GraphQL!Type
	to
			t: View!Schema (
				name <- s.name,
				items <- s.attribute
			)
}

rule Attribute2Item {
	from 
			s: GraphQL!Attribute
	to
			t: View!Item (
				name <- s.name,
				dataIndex <- s.name,
				type <- s.typeName
			)
}

